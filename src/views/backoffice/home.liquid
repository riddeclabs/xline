{% layout 'backoffice/default-layout' %}
{% block content %}
  <h1 class='pb-5 text-white fs-1'>Dashboard</h1>
  <div class="home-wrapper">
    <div class="total-home">
      <div class="wrapper-table p-4 fs-5">Total customers: {{ totalCustomers }}</div>
      <div class="wrapper-table p-4 mt-3">
        <div class="fs-5">Total supply: {{ totalSupply }} $</div>
        <div class="mt-1">
          {% for collateral in collateralCurrencyAmount %}
            <div class="fs-6">{{ collateral.symbol }}: {{ collateral.amount }} $</div>
          {% endfor %}
        </div>
        <hr style="color: #fff;">
        <div class="fs-5">Total borrow: {{ totalDebt }} $</div>
        <div class="mt-1">
          {% for debt in debtCurrencyInitial %}
            <div class="fs-6">{{ debt.symbol }}: {{ debt.amount }} $</div>
          {% endfor %}
        </div>
        <hr>
        <div class="fs-5">Total free accumulated {{ freeAccum }} $</div>
      </div>
    </div>
    <div class="suported-home">
      <div class="wrapper-table p-4">
        <div class="fs-5">Supported currencies</div>
        <div class="fs-6 mt-3">Collateral:</div>
        <ul>
          {% for collateral in collateralCurrencyAmount %}
            <li>{{ collateral.symbol }}</li>
          {% endfor %}
        </ul>
        <div class="fs-6 mt-3">Borrow:</div>
        <ul>
          {% for borrow in debtCurrencyInitial %}
            <li>{{ borrow.symbol }}</li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
{% endblock %}